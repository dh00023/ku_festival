<!-- Button trigger modal -->
<button type="button" class="btn" data-toggle="modal" data-target="#searchModal" style="background-color: #ffeb3b; color: #000; margin: 20px; border: 0; font-size: 20px;">
  <i class="fa fa-search" aria-hidden="true"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="container">
          <%= form_tag search_posts_path, method: :get, role: "search" do |f|%>
            <div class="form-check">
              <label class="form-check-label">
                <%= check_box_tag :search, "낮부스" %> 낮부스
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "밤주점" %> 밤주점
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "주변주점" %> 주변주점
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "안주" %> 안주
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "술" %> 술
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "합석" %> 합석
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "스포츠" %> 스포츠
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "섹시" %> 섹시
              </label>
              <label class="form-check-label">
                <%= check_box_tag :search, "캐릭터" %> 캐릭터
              </label>
            </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-block btn-round" style="color: #fff;">
              <i class="fa fa-check" aria-hidden="true"></i>
            </button>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>