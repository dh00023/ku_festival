    <![endif]-->
    <!-- spoqa font -->
    <link href='//spoqa.github.io/spoqa-han-sans/css/SpoqaHanSans-kr.css' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <%= render 'layouts/nav' %>

    <div class="container mb-30">
      <% if alert %>
          <div class="alert alert-danger" role="alert"><%= alert %></div>
      <% end %>
      <% if notice %>
          <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>

      <%= yield %>
    </div>

    <div class="mb-30" style="text-align: center; color: rgba(0, 0, 0, 0.2);">건국대학교 멋쟁이사자처럼</div>
    <audio id="chatAudio"><source src="/sounds/notification.mp3" type="audio/mpeg"></audio>
    <script src="https://use.fontawesome.com/583147df63.js"></script>

